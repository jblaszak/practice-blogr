---
import "./Article.css";

export interface Props {
  title: string;
  primaryTitle: string;
  primaryText: string;
  secondaryTitle: string;
  secondaryText: string;
  image: string;
  imageDesktop: string;
  imageAlt: string;
  leftAligned: boolean;
}

const {
  title,
  primaryTitle,
  primaryText,
  secondaryTitle,
  secondaryText,
  image,
  imageDesktop,
  imageAlt,
  leftAligned,
} = Astro.props;
---

<article class={`article${leftAligned ? " left" : " right"}`}>
  <div>
    {title && <h2>{title}</h2>}
    <section class="primary">
      <h3>{primaryTitle}</h3>
      <p>{primaryText}</p>
    </section>
    <section class="secondary">
      <h3>{secondaryTitle}</h3>
      <p>{secondaryText}</p>
    </section>
    <picture>
      <source srcset={imageDesktop} media="(min-width:600px)" />
      <img src={image} alt={imageAlt} />
    </picture>
  </div>
</article>
